{
  "name": "Poetry",
  "image": "mcr.microsoft.com/devcontainers/base:bullseye",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "installTools": true,
      "version": "3.10.12"
    },
    "ghcr.io/devcontainers-contrib/features/poetry:2": {
      "version": "1.5.1"
    }
  },
  "initializeCommand": "poetry install --no-ansi --no-root",
  "containerEnv": {
    "TZ": "Asia/Tokyo"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff"
      ]
    }
  }
}
